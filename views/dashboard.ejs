<head>
    <title> Hansard App </title>
    <script src="https://use.fontawesome.com/c1df44a320.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="mystyle.css">
    <script src = "bootstrap.min.js"></script>
  <script src = "jquery/dist/jquery.js"></script>
  <script src="highcharts/highcharts.js"></script>
  <!--<script src="themes/grid.js" type="text/javascript"></script>-->
  <script src = "chart-render.js"> </script>
  
  
</head>

<body>

<div class="container-fluid">
    <div class="jumbotron">
        <h1 class="text-center">Hansard PQ Dashboard</h1>
        <br>
        <form>
            <div class="form-inline">
                <div class="form-group">
                    <input class="form-control" id="search-text" type="search" placeholder = "filter to search term">
                </div>
            <button type="submit" class="btn btn-primary" id ="search-btn">Go</button>
            </div>
        <br>
        <!--This is to be hidden unless clickig advanced filter below-->
        <div id="advanced-filter">
            <div class="form-inline">
                <div class="form-group">
                    <label for="deptOptions">Department</label>
                    <select class="form-control" id="deptOptions">
                      <option>1</option>
                      <option>2</option>
                      <option>3</option>
                      <option>4</option>
                      <option>5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="tMember">Tabling member</label>
                    <input type="text" id="tMember" list="memberList" />
                    <datalist id="memberList">
                      <option>Apple</option>
                      <option>Banana</option>
                      <option>Sweet Blackberry</option>
                      <option>Sharp Blueberry</option>
                      <option>Bitter Lemon</option>
                      <option>Lychee</option>
                      <option>Peach</option>
                      <option>Pear</option>
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="houseSelect">House</label>
                    <select class="form-control" id="deptOptions">
                      <option>both</option>
                      <option>commons</option>
                      <option>lords</option>
                    </select>
                </div>
        
            </div>
            <br>
            <div class="form-inline">
                <div class="form-group">
                    <label for="fromDate">From:</label>
                    <input type="date" id = "fromDate">
                </div>
                <div class="form-group">
                    <label for="toDate">To:</label>
                    <input type="date" id = "toDate">
                </div>
            </div>
        </div>
        <h5 class="text-center text-primary" id="showHideClick">
             <i class="fa fa-chevron-down" aria-hidden="true"></i>
            advanced filter
            <i class="fa fa-chevron-down" aria-hidden="true"></i>
        <h5>
        </form>
    </div> 
    
    <div class="row">
        <div class = "col-md-8">
            <div class="thumbnail" id="chartDepartment" style="height:400px;"></div>
        </div>
        <div class = "col-md-4">
            <div class="thumbnail" id="chartHouse" style="height:400px;"></div>
        </div>
    </div>
    
    <div class="row">
        <div class = "col-md-6">
            <div class="thumbnail" id="chartTabMember" style="height:400px;"></div>
        </div>
        <div class = "col-md-6">
            <div class="thumbnail" id="chartAnsMember" style="height:400px;"></div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail" id="chartDate" style="width:75%; height:400px;"></div>
        </div>
    </div>
    
</div>


<!--Event handlers-->
<script src = "search-filter.js"> </script>

<!--Initial Charts-->
<script> renderCharts("") </script>
</body>